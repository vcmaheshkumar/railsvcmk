

<% if user_signed_in? %>

<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @vcmks.each do |vcmk| %>
      <% if vcmk.user == current_user %>
      <tr>
        <td><%= link_to vcmk.first_name + ' ' + vcmk.last_name, vcmk %></td>
        <td><%= vcmk.email %></td>
        <td><%= vcmk.phone %></td>
        <td><%= vcmk.twitter %></td>
        <td><%= link_to 'Dlelete', vcmk, method: :delete, class:"btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'Insert Data', new_vcmk_path, class:"btn btn-secondary btn-lg btn-block" %>

<% else %>
  <h1>Hello world!</h1>
  <p>This is my rails Webpage...</p>

<% end %>